#!/usr/bin/env bash
#
# External command to get to the homebrew-cask repo, issues, or pull-requests

set -e;                # exit on uncaught error
set +o histexpand;     # don't expand history expressions

if [[ $# -lt 1 ]]; then
    open 'https://github.com/caskroom/homebrew-cask/'
elif [[ $1 -eq 'pr' || $1 -eq 'p' ]]; then
    open 'https://github.com/caskroom/homebrew-cask/pulls'
elif [[ $1 -eq 'i' ]]; then
    open 'https://github.com/caskroom/homebrew-cask/issues'
fi
