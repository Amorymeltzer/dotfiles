{
  "env": {
    "node": true,
    "browser": true
  },
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "semi": ["error", "always"]
  }
}
