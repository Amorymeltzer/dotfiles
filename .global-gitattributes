# Largely inspired by/taken from https://tekin.co.uk/2020/10/better-git-diff-output-for-ruby-python-elixir-and-more
*.[ch]    diff=cpp
*.c++     diff=cpp
*.h++     diff=cpp
*.cpp     diff=cpp
*.hpp     diff=cpp
*.cc      diff=cpp
*.hh      diff=cpp
*.cs      diff=csharp
*.css     diff=css
*.html    diff=html
*.xhtml   diff=html
*.ex      diff=elixir
*.exs     diff=elixir
*.go      diff=golang
*.php     diff=php
*.perl    diff=perl
*.pl      diff=perl
*.pm      diff=perl
*.py      diff=python
*.md      diff=markdown
*.rb      diff=ruby
*.gemspec diff=ruby
*.rake    diff=ruby
*.rs      diff=rust
*.lisp    diff=lisp
*.el      diff=elisp
*.emacs  diff=elisp
